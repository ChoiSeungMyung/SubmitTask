<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/userItem_user_profile_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.2"/>

    <TextView
        android:id="@+id/userItem_user_id"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/userItem_user_profile_image"
        app:layout_constraintBottom_toTopOf="@+id/userItem_user_name"
        app:layout_constraintLeft_toRightOf="@+id/userItem_user_profile_image"
        app:layout_constraintHeight_percent="0.3"/>

    <TextView
        android:id="@+id/userItem_user_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/userItem_user_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/userItem_user_id"/>
</android.support.constraint.ConstraintLayout>